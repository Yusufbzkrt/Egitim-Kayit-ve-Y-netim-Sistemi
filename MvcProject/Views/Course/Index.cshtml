@model IEnumerable<Aday> // IEnumerable Bu, koleksiyonun tüm elemanlarına erişmenizi kolaylaştırır.

@if (Model.Any())
{
	<h4 class="display-6">
		Applications (@Model.Count() kayıt bulundu)
	</h4>
	<table class="table table-hover table-striped">
		<thead>
			<tr>
				<th>Full Name</th>
				<th>Email</th>
				<th>Apply At</th>
				<th>Course</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			@foreach (Aday aday in Model)
			{
				<tr>
					<td>@aday.FullName</td>
					<td>@aday.Email</td>
					<td>@aday.ApplyAt</td>
					<td>@aday.SelectedCourse</td>
					<td><a href="/course/courseUpdate/@aday.Id" class="btn btn-warning">Update</a></td>
					<td>
						<form action="/course/courseDelete" method="post" style="display:inline;">
							<input type="hidden" name="Id" value="@aday.Id" />
							<button type="submit" class="btn btn-danger btn-sm">Delete</button>
						</form>
					</td>
				</tr>

			}
		</tbody>
	</table>
}
else
{
	<div class="alert alert-info">
		Henüz başvuru yok lütfen buraya
		<a class="alert-link" asp-action="Apply">tıklayın.</a>
	</div>
}